
<tr>
    <td><%= user.full_name %></td>
    <td><%= user.email %></td>
    <td><%= user.admin %></td>
     <td style ="color: green;">
        <%if user.approved == false %>
            <%=user.approved = link_to  'Inactive', active_user_path(user), method: :patch, data: {confirm: "Do you want to activate #{user.full_name}?"},:class => 'link', style: "color: red;" %>
        <%else%>
            <%=user.approved = link_to  'Active', inactive_user_path(user), method: :patch, data: {confirm: "Do you want to deactivate #{user.full_name}?"},:class => 'link', style: "color: green;" %>
        <%end %>
    </td>
    <td><%= link_to "Edit", edit_user_path(user) %></td>
</tr>
